{
  "name": "markdowned",
  "version": "0.2.2",
  "description": "One-click page export to clean Markdown.",
  "type": "module",
  "engines": {
    "bun": ">=1.3.8"
  },
  "packageManager": "bun@1.3.8",
  "license": "MIT",
  "scripts": {
    "build:extension": "bun src/scripts/build-extension.ts",
    "lint": "bunx eslint .",
    "format": "bunx prettier --write .",
    "typecheck": "bunx tsc --noEmit",
    "check": "bun run lint && bun run typecheck",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@mozilla/readability": "^0.6.0",
    "@types/bun": "^1.1.22",
    "@types/chrome": "^0.1.36",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.7.4",
    "turndown": "^7.2.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md,scss,yaml,yml}": [
      "prettier --write"
    ]
  }
}
